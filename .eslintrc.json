{
    "env": {
        "node": true,
        "commonjs": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:node/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 5
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
		],
		"no-trailing-spaces": "error",
		"no-unused-vars": ["error", { "args": "none" }],
		"no-process-exit": "off",
		"no-empty": "off"
    }
}